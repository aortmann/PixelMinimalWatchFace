<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/complication_configuration_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complication_config"
        android:textColor="@android:color/white"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/left_complication_background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/added_complication"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complication_configuration_text_view"/>

    <ImageButton
        android:id="@+id/left_complication"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/left_complication_background"
        app:layout_constraintEnd_toEndOf="@+id/left_complication_background"
        app:layout_constraintTop_toTopOf="@+id/left_complication_background"
        app:layout_constraintBottom_toBottomOf="@+id/left_complication_background"/>

    <ImageView
        android:id="@+id/right_complication_background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/added_complication"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complication_configuration_text_view"/>

    <ImageButton
        android:id="@+id/right_complication"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/right_complication_background"
        app:layout_constraintStart_toStartOf="@+id/right_complication_background"
        app:layout_constraintTop_toTopOf="@+id/right_complication_background"
        app:layout_constraintBottom_toBottomOf="@+id/right_complication_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>